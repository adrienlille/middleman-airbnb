<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->

<div class="banner banner-flat" style="background-image: url(<%= image_path "#{flat.city_slug}.jpg"%>)">
</div>
<div class="wrapper header-flat">
  <div class="container">
    <div class="row">
      <div class="col-xs-6 col col-xs-offset-1">
        <div class="flat-details">
          <div class="flat-owner">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
            <p><%= flat.name %></p>
          </div><!-- fin du flat owner -->
          <div class="flat-name">
            <h1><%= flat.description %></h1>
            <p><%= flat.city_name %></p>
            <p class="rating"><% flat.rating.times do%><i class="fa fa-star"></i><% end %></p>
          </div><!-- fin du flat name -->
        </div><!-- fin du flat details -->
      </div><!-- fin de la col du flat details -->

      <div class="col-xs-4">
        <form action="#">
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input class="form-control" placeholder="checkin" id="checkin" type="text">
              </div>
              <div class="col-xs-6">
                <input class="form-control" placeholder="checkout" type="text">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="" id="guests" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
          <input class="btn btn-danger" value="Book it" style="width: 100%" type="submit">
        </form>
      </div><!-- fin de la col du formulaire -->
    </div><!-- fin de la row -->
  </div><!-- fin du container du flat header -->
</div><!-- fin du wrapper du flat header -->

<div class="wrapper flat-desc">
  <div class="container">
    <div class="row">
        <h2>About this flat</h2>
        <p><%= flat.full_desc %></p>

        <hr>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            The Space
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Accommodates:  <strong><%= flat.max_hosts %></strong></li>
              <li>Bathrooms:  <strong><%= flat.bathrooms_amount %></strong></li>
              <li>Bed type:  <strong><%= flat.bed_type %></strong></li>
              <li>Bedrooms:  <strong><%= flat.bedroom_amount %></strong></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Beds: <strong><%= flat.beds %></strong></li>
              <li>Property type: <strong><%= flat.property_type %></strong></li>
              <li>Room type: <strong><%= flat.room_type %></strong></li>
            </ul>
          </div>
        </div>
        <hr>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            Amenities
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li><i class="fa fa-cutlery"></i><strong>Kitchen</strong></li>
              <li><i class="fa fa-wifi"></i><strong>Wifi</strong></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li><i class="fa fa-desktop"></i><strong>TV</strong></li>
              <li><i class="fa fa-glass"></i><strong>Welcome drink</strong></li>
            </ul>
          </div>
        </div>
    </div><!-- fin de la row -->
  </div><!-- fin du container de la flat desc -->
</div><!-- fin du wrapper de la flat desc -->

